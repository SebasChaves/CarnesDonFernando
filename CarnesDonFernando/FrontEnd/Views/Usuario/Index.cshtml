@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@model FrontEnd.Models.LoginModel

@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<br />
<br />
<br />
<br />
<section class="vh-100">
    <div class="container py-5 h-100" >
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-12 col-xl-4">

                <div class="card" style="border-radius: 1rem; box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3)">
                    <div class="card-body text-center">
                        <div class="mt-3 mb-4">
                            <img src="~/Imagenes/avatar-de-usuario.png"
                                 class="rounded-circle img-fluid" style="width: 100px;" />
                        </div>
                        <h4 class="mb-2">@HttpContextAccessor.HttpContext.Session.GetString("nombreUsuario")</h4>
                        <p class="text-muted mb-4">
                            @HttpContextAccessor.HttpContext.Session.GetString("userCorreo") <br /> @Html.ActionLink("Cerrar Sesión", "LogOff", "Usuario")
                        </p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

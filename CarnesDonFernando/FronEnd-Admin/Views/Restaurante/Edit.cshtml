@model FrontEnd.Models.RestauranteViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid" style="margin-top:100px">
    <div class="row abs-center form-factura">
        <form asp-action="Edit" id="formularioMio" method="post">
            <div class="col-md">

                <form asp-action="Edit" id="formularioMio" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="NombreRestaurante" class="control-label"></label>
                                <input required asp-for="NombreRestaurante" value="@Model.NombreRestaurante" class="form-control" />
                                <span asp-validation-for="NombreRestaurante" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="Ubicacion" class="control-label"></label>
                                <input required asp-for="Ubicacion" value="@Model.Ubicacion" class="form-control" />
                                <span asp-validation-for="Ubicacion" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="Horario" class="control-label"></label>
                                <input required asp-for="Horario" value="@Model.Horario" class="form-control" />
                                <span asp-validation-for="Horario" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="Telefono" class="control-label"></label>
                                <input required maxlength="9" asp-for="Telefono" value="@Model.Telefono" class="form-control" />
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="UrlImg" class="control-label"></label>
                            <input required asp-for="UrlImg" class="form-control" value="@Model.UrlImg" />
                            <span asp-validation-for="UrlImg" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="shopping-cart-footer" style="margin-top: 50px; border-color: white">
                        <div class="column">
                            <input asp-for="IdRestaurante" value="@Model.IdRestaurante" hidden class="form-control" />
                            <script>
                                var formularioMio = document.getElementById('formularioMio');
                                formularioMio.addEventListener('submit', function (event) {
                                    event.preventDefault();
                                    mostrarMensaje();
                                });
                                function mostrarMensaje() {
                                    //event.preventDefault();
                                    if (formularioMio.checkValidity()) {
                                        Swal.fire({
                                            title: '¡Restaurante actualizado!',
                                            text: 'El restaurante se actualizó con exito',
                                            icon: 'success',
                                            confirmButtonColor: '#AD2022',
                                            confirmButtonText: 'Entendido'
                                        }).then(function () {
                                            // document.forms[0].submit();
                                            formularioMio.submit();
                                        });
                                    }
                                }
                            </script>

                            <a href="http://localhost:8000/Restaurante" class="btnCatalogo btn">Regresar</a>
                            <input type="submit" onclick="mostrarMensaje()" value="Actualizar restaurante" class="btn btnCatalogo" />
                        </div>
                    </div>
                </form>

            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model FrontEnd.Models.ProductoViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid" style="margin-top:100px">
    <div class="row abs-center form-factura">
        <form asp-action="Edit" id="formularioMio" method="post">
            <div class="col-md">

                <form asp-action="Edit" id="formularioMio" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="IdCategoria" class="control-label"></label>
                                <select asp-for="IdCategoria" class="form-control" asp-items="@ViewBag.idCategorias"></select>
                                <span asp-validation-for="IdCategoria" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="Nombre" class="control-label"></label>
                                <input asp-for="Nombre" required value="@Model.Nombre" class="form-control" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="Cantidad" class="control-label"></label>
                                <input asp-for="Cantidad" required value="@Model.Cantidad" class="form-control" min="1" />
                                <span asp-validation-for="Cantidad" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="Precio" class="control-label"></label>
                                <input asp-for="Precio" required value="@Model.Precio" class="form-control" min="500" />
                                <span asp-validation-for="Precio" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="DescripcionProductoCorta" class="control-label"></label>
                                <input asp-for="DescripcionProductoCorta" required value="@Model.DescripcionProductoCorta" class="form-control" />
                                <span asp-validation-for="DescripcionProductoCorta" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="UrlImg" class="control-label"></label>
                                <input asp-for="UrlImg" required value="@Model.UrlImg" class="form-control" />
                                <span asp-validation-for="UrlImg" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="DescripcionProductoLarga" class="control-label"></label>
                        <textarea asp-for="DescripcionProductoLarga" required value="@Model.DescripcionProductoLarga" class="form-control"></textarea>
                        <span asp-validation-for="DescripcionProductoLarga" class="text-danger"></span>
                    </div>
                    <div class="shopping-cart-footer" style="margin-top: 50px; border-color: white">
                        <div class="column">
                            <input asp-for="IdProducto" value="@Model.IdProducto" hidden class="form-control" />
                            <script>
                                var formularioMio = document.getElementById('formularioMio');
                                formularioMio.addEventListener('submit', function (event) {
                                    event.preventDefault();
                                    mostrarMensaje();
                                });
                                function mostrarMensaje() {
                                    //event.preventDefault();
                                    if (formularioMio.checkValidity()) {
                                        Swal.fire({
                                            title: '¡Producto actualizado!',
                                            text: 'El producto se actualizó con exito',
                                            icon: 'success',
                                            confirmButtonColor: '#AD2022',
                                            confirmButtonText: 'Entendido'
                                        }).then(function () {
                                            // document.forms[0].submit();
                                            formularioMio.submit();
                                        });
                                    }
                                }
                            </script>

                            <a href="http://localhost:8000/" class="btnCatalogo btn">Regresar</a>
                            <input type="submit" onclick="mostrarMensaje()" value="Actualizar producto" class="btn btnCatalogo" />
                        </div>
                    </div>
                </form>

            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

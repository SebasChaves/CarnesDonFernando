@model FrontEnd.Models.ProductoViewModel

@{
    ViewData["Title"] = "Create";
}

<br />
<br />
<br />
<br />
<div class="row">
    <div class="col-md-4">
    </div>
</div>
<div class="container-fluid">
    <div class="row abs-center form-factura">
        <form asp-action="Create" id="formularioMio" method="post">
            <div class="col-md">

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="IdCategoria" class="control-label"></label>
                                <select asp-for="IdCategoria" class="form-control" asp-items="@ViewBag.idCategorias"></select>
                                <span asp-validation-for="IdCategoria" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="Nombre" class="control-label"></label>
                                <input asp-for="Nombre" class="form-control" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="Cantidad" class="control-label"></label>
                                <input asp-for="Cantidad" class="form-control" min="1"/>
                                <span asp-validation-for="Cantidad" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="Precio" class="control-label"></label>
                                <input asp-for="Precio" class="form-control" min="500"/>
                                <span asp-validation-for="Precio" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="DescripcionProductoCorta" class="control-label"></label>
                                <input asp-for="DescripcionProductoCorta" class="form-control" />
                                <span asp-validation-for="DescripcionProductoCorta" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="UrlImg" class="control-label"></label>
                                <input asp-for="UrlImg" class="form-control" />
                                <span asp-validation-for="UrlImg" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="DescripcionProductoLarga" class="control-label"></label>
                        <textarea asp-for="DescripcionProductoLarga" class="form-control"></textarea>
                        <span asp-validation-for="DescripcionProductoLarga" class="text-danger"></span>
                    </div>
                    <div class="shopping-cart-footer" style="margin-top: 50px; border-color: white">
                        <div class="column">
                            <a href="http://localhost:8000/" class="btnCatalogo btn">Regresar</a>
                            <input type="submit" value="Crear producto" class="btn btnCatalogo" />
                        </div>
                    </div>
                </form>

            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
